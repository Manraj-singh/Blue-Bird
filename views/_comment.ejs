<li>
    <p>
        <% if((locals.user) && (locals.user.id == comment.user.id)) {%>
            <small>
                <a href="/comments/destroy/<%=comment._id %>">X</a>
            </small>
            <%}%>
        <%=comment.content %>
        <br>
        <small>
            <%=comment.user.email%>
        </small>
    </p>   


    <small>
     
        <!-- start emoji part -->
        <% if(comment.commentEmojiData){ %>
             <span class="reaction-icon-<%=comment._id%>"></span> 
            <a class="reaction-count-<%=comment._id%>" data-likes="" data-reactions="" disabled></a>
            <% if(comment.commentEmojiData?.post_id === comment._id) { %>
            <div>
                  <!-- Displaying selected emoji -->
                  
                    <a class="toggle-like-button" data-Like="<%=comment.commentEmojiData.like.length%>" href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Like">
                     👍</a> <span class="comment-reaction-like-<%=comment._id%>"> <%=comment.commentEmojiData.like.length %> </span>

                    <a class="toggle-like-button" data-Love="<%= comment.commentEmojiData.love.length %>" href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Love">
                   ❤ </a>  <span class="comment-reaction-love-<%=comment._id%>"> <%= comment.commentEmojiData.love.length %></span>

                    <a class="toggle-like-button" data-Sad="<%=comment.commentEmojiData.sad.length %>"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Sad">
                     😞</a>  <span class="comment-reaction-sad-<%=comment._id%>">  <%= comment.commentEmojiData.sad.length %></span>

                     <a class="toggle-like-button" data-Angry="<%= comment.commentEmojiData.angry.length %>" href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Angry">
                      😡</a>     <span class="comment-reaction-angry-<%=comment._id%>"> <%= comment.commentEmojiData.angry.length %></span>

                       <a class="toggle-like-button" data-Wow="<%= comment.commentEmojiData.wow.length %>" href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Wow">
                        😲</a>       <span class="comment-reaction-wow-<%=comment._id%>"> <%= comment.commentEmojiData.wow.length %></span>
                
             
            
            </div>
            <% } %>
            
            <% }else{ %>
                <div>
                    <a class="reaction-count-<%=comment._id%>" data-likes="<%= comment.likes.length %>" data-reactions="" disabled></a>
                    <a class="toggle-like-button"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Like"> 0👍   </a>
                    <a class="toggle-like-button"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Love"> 0❤ </a>
                    <a class="toggle-like-button"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Sad"> 0😞</a>
                    <a class="toggle-like-button"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Angry">0😡</a>
                    <a class="toggle-like-button"  href="/home/reactions/toggle/?id=<%=comment._id%>&type=Comment&reaction=Wow">0😲</a>
                  </div>
            <% } %>
       
                <!-- end emoji part -->
       
       
    </small>
</li>